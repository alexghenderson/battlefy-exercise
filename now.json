{
  "version": 2,
  "name": "battlefy-exercise",
  "builds": [
    {"src": "api/search.js", "use": "@now/node"},
    {"src": "client/package.json", "use": "@now/next"}
  ],
  "routes": [
    {"src": "/api/search", "dest": "api/search.js"},
    {"src": "/.*", "dest": "/client/package.json"}
  ],
  "env": {
    "API_ENDPOINT": "/api/search",
    "LOL_API_KEY": "@league_api_key",
    "DATA_DRAGON_BASE": "http://ddragon.leagueoflegends.com/cdn/6.24.1/data/en_US"
  }
}
